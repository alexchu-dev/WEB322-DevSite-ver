<main id="login">
  {{#if login}}
    <p class="center mb-4">{{message}}</p>
  {{else if logout}}
    <p class="center mb-4">{{message}}</p>
  {{/if}}
  <form class="form-style" method="POST">
    <div class="form-label display-6 text-center">Card Number</div>
    <div class="row g-3 align-items-start">
      <div class="col-12 col-sm-8">
        <input
          class="form-control"
          placeholder="Enter your card number"
          name="cardnumber"
          id="cardnumber"
        />
      </div><div class="col-6 col-sm-4 d-grid gap-2 mx-auto mb-3">
        <button
          class="btn btn-custom"
          type="submit"
          formaction="/portfolio/expressjs/library-app/login"
        >LOGIN</button></div>
    </div>
    <div class="col"><span class="form-text">(Demo: 0000 or 1234)</span></div>
    {{#if error}}
      <p class="danger small">{{errorMsg}}</p>
    {{/if}}
  </form>
</main>